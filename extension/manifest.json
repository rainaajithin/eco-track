{
  "manifest_version": 3,
  "name": "EcoBrowse",
  "version": "1.2",

  "permissions": [
    "webRequest",
    "storage",
    "notifications",
    "activeTab",
    "tabs"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Eco COâ‚‚ & Time Tracker"
  },

  "web_accessible_resources": [
    {
      "resources": ["dashboard.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

